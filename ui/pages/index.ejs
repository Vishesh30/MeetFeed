<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SME AHM</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom page CSS -->
    <link href="/css/app/main.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="#">SME All Hands Meeting</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Full Page Image Header with Vertically Centered Content 
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12 text-center">
                    <h1 class="font-weight-light">Welcome to SME All Hands Meeting</h1>
                    <p class="lead">Something that Harish / Chandan want to add</p>
                </div>
            </div>
        </div>
    </header>
    -->

    <!-- Page Content -->
    <div class="container-fluid postpage">
        <div class="row" id="questions">
            <div class="col-lg-12 text-center">
                <h1 class="header">Open up... and ask questions.</h1>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-9">
                <div class="card shadow mb-4 postcontainer">
                    <div class="card-header py-3">
                        <div class="col-md-8 float-left">
                            <h6 class="m-0 text">Top Questions</h6>
                        </div>
                        <div class="col-md-4 float-right">
                            <button type="button" class="btn btn-info btn-sm" id="sort-by-votes">
                                Sort by Votes
                            </button>
                            <button type="button" class="btn btn-info btn-sm" id="sort-by-time">
                                Sort by Time
                            </button>
                        </div>

                    </div>
                    <div class="card-body scroll">
                        <% postList.forEach(function(post) { %>
                        <div class="card mb-1 py-1 post">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-10"><%= post.postContent %></div>
                                    <div class="col-md-2 float-right">
                                        <button type="button"
                                            class="btn btn-primary btn-sm upVote-Button borderraidus upvotebtn"
                                            post-id="<%= post._id %>">
                                            <i class="fa fa-thumbs-o-up"></i>&nbsp;&nbsp;&nbsp;<%= post.upVotes %>
                                        </button>
                                        <button type="button" class="btn btn-danger btn-sm downVote-Button borderraidus"
                                            post-id="<%= post._id %>">
                                            <i class="fa fa-thumbs-o-down"></i>&nbsp;&nbsp;&nbsp;<%= post.downVotes %>
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <% }); %>

                    </div>
                </div>

            </div>
            <div class="col-lg-3">
                <div class="card shadow mb-4 postcontainer">
                    <div class="card-header py-3">
                        <h6 class="m-0 text">Post your question</h6>
                    </div>
                    <div class="card-body">
                        <form id="add_question">
                            <div class="form-group">
                                <textarea class="form-control" id="question" rows="5"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn submitbtn" onclick="addQuestion();">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/js/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- Page level custom scripts -->
    <script type="module" src="/js/app/index_page.js"></script>

</body>

</html>